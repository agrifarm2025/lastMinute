<script>
    let updatedTasks = [];

    function allowDrop(event) {
        event.preventDefault();
    }

    function drag(event) {
        event.dataTransfer.setData("text", event.target.id);
    }

    function drop(event) {
        event.preventDefault();
        
        let taskId = event.dataTransfer.getData("text");
        let taskElement = document.getElementById(taskId);
        let newColumn = event.target.closest(".task-container");

        if (newColumn) {
            newColumn.appendChild(taskElement);
            
            let newStatus = newColumn.id;
            updatedTasks = updatedTasks.filter(task => task.task_id !== taskId.replace("task", ""));
            updatedTasks.push({ task_id: taskId.replace("task", ""), status: newStatus });
        }
    }

    document.getElementById("saveChanges").addEventListener("click", function () {
    if (updatedTasks.length === 0) {
        alert("No changes to save.");
        window.location.href = "{{ path('list', {'id': id}) }}";
        return;
    }

    // Create an array of fetch promises
    let fetchPromises = updatedTasks.map(task => {
        return fetch(`/update-task-status/${task.task_id}/${task.status}`, { method: 'GET' })
            .then(response => response.json())
            .then(data => {
                console.log("Task updated:", data);
                return data; // Return the response data for further processing if needed
            })
            
    });

    // Wait for all fetch requests to complete
    Promise.all(fetchPromises)
        .then(() => {
            // Redirect to the route after all tasks are updated
            window.location.href = "{{ path('list', {'id': id}) }}";
        })
        

    // Clear the updatedTasks array
    updatedTasks = [];
});
</script>
