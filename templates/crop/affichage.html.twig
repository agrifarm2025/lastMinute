{% extends 'base_front.html.twig' %}

{% block body %}
<div class="container-fluid bg-light bg-icon py-6">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h1 class="display-5 mb-3">{{ products.typeCrop }}</h1>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-lg-6 col-md-8 wow fadeInUp" data-wow-delay="0.1s">
                <div class="bg-white text-center h-100 p-4 p-xl-5">
                    
                    <!-- Profile Image -->
                    <img class="img-fluid mb-4 rounded-circle" src="{{ asset('front/img/fruit.png')}}" alt="Profile Image" style="width: 150px; height: 150px; object-fit: cover;">

                    <!-- Profile Information -->
                    <h4 class="mb-3">{{ products.cropevent }}</h4>
                    <h4 class="mb-3">{{ products.typeCrop }}</h4>
                    
                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-center gap-3">
                        <a class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill" href="{{ path('app_crop_add', {'id': products.id}) }}">Modify</a>
                        <a class="btn btn-outline-danger border-2 py-2 px-4 rounded-pill" href="{{ path('delete_crop', {'id': products.id}) }}">Delete</a>
                    </div>
                    
                    <!-- Navigation Button -->
                    <div class="mt-4">
                        <a href="{{ path('listcrop', {'id': products.id}) }}" class="btn btn-primary rounded-pill py-3 px-5">Go to Soil Data</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
