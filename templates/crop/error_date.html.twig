{% extends 'base_front.html.twig' %}

{% block body %}

<div class="container d-flex flex-column align-items-center justify-content-center min-vh-100">
    <!-- Warning Icon -->
    <div class="text-center">
        <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
    </div>

    <!-- Error Title -->
    <h2 class="text-center text-danger mt-3">Invalid Date Selection</h2>

    <!-- Error Message -->
    <div class="alert alert-warning text-center mt-3 w-75 shadow-sm">
        {% if errorType == 'plantation' %}
            <p>
                <strong>Plantation Date: </strong> <span class="text-danger">{{ plantationDate }}</span> is <strong>not within the optimal range.</strong>
                <br>
                Recommended sowing period: <strong class="text-primary">{{ earlySowingDates|join(' and ') }}</strong>.
            </p>
        {% elseif errorType == 'harvest' %}
            <p>
                <strong>Harvest Date: </strong> <span class="text-danger">{{ plantationDate }}</span> is <strong>not within the optimal range.</strong>
                <br>
                Recommended harvest period: <strong class="text-primary">{{ earlySowingDates|join(' and ') }}</strong>.
            </p>
        {% endif %}
    </div>

    <!-- Back Button -->
    <div class="text-center mt-4">
        <a href="{{ path('app_crop_add') }}" class="btn btn-lg btn-primary px-5 py-2 shadow-sm">
            <i class="fas fa-arrow-left"></i> Back to Form
        </a>
    </div>
</div>

{% endblock %}