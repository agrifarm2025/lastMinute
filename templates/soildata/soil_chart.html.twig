{% extends 'base_front.html.twig' %}

{% block title %}Soil Data Chart{% endblock %}

{% block body %}
    <h2 class="text-center">Soil Data Visualization</h2>
    <canvas id="soilChart"></canvas>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let soilChart;
        
        function fetchSoilData() {
            fetch('/api/soil-data')
                .then(response => response.json())
                .then(data => {
                    if (soilChart) {
                        // Update existing chart data
                        soilChart.data.labels = data.labels;
                        soilChart.data.datasets[0].data = data.ph;
                        soilChart.data.datasets[1].data = data.nutrients;
                        soilChart.data.datasets[2].data = data.humidity;
                        soilChart.update(); // Update the chart
                    } else {
                        // Create new chart if it doesn't exist
                        var ctx = document.getElementById('soilChart').getContext('2d');
                        soilChart = new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: data.labels,
                                datasets: [
                                    {
                                        label: 'pH Level',
                                        data: data.ph,
                                        backgroundColor: 'rgba(255, 99, 132, 0.6)',
                                        borderColor: 'rgba(255, 99, 132, 1)',
                                        borderWidth: 1
                                    },
                                    {
                                        label: 'Nutrient Level',
                                        data: data.nutrients,
                                        backgroundColor: 'rgba(54, 162, 235, 0.6)',
                                        borderColor: 'rgba(54, 162, 235, 1)',
                                        borderWidth: 1
                                    },
                                    {
                                        label: 'Humidity Level',
                                        data: data.humidity,
                                        backgroundColor: 'rgba(75, 192, 192, 0.6)',
                                        borderColor: 'rgba(75, 192, 192, 1)',
                                        borderWidth: 1
                                    }
                                ]
                            },
                            options: {
                                responsive: true,
                                scales: {
                                    y: { beginAtZero: true }
                                }
                            }
                        });
                    }
                })
                .catch(error => console.error('Error fetching soil data:', error));
        }

        // Fetch the initial chart data
        fetchSoilData();

        // Refresh chart every 5 seconds
        setInterval(fetchSoilData, 5000);
    </script>
{% endblock %}
