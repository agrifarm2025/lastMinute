{% extends 'base_front.html.twig' %}

{% block n_page %}Soil Statistics{% endblock %}

{% block body %}
<div class="container py-6">
    <h1 class="text-center mb-3 fw-bold text-primary">Soil Data Statistics</h1>
    <p class="text-center text-muted mb-5">Analyze soil pH levels, humidity distribution, nutrient content, and soil types.</p>

    <div class="row">
        <!-- Graphique en barres - Niveau de pH -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center fw-bold">Soil pH Levels</div>
                <div class="card-body">
                    <canvas id="phChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Graphique en lignes - HumiditÃ© -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white text-center fw-bold">Soil Humidity Levels</div>
                <div class="card-body">
                    <canvas id="humidityChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Graphique en barres - Niveau de Nutriments -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark text-center fw-bold">Soil Nutrient Levels</div>
                <div class="card-body">
                    <canvas id="nutrientChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Graphique en camembert - RÃ©partition des types de sol -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center fw-bold">Soil Type Distribution</div>
                <div class="card-body">
                    <canvas id="soilTypeChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Importation de Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // DonnÃ©es JSON envoyÃ©es par le contrÃ´leur
        const phLevels = {{ phLevels|raw }};
        const humidityLevels = {{ humidityLevels|raw }};
        const nutrientLevels = {{ nutrientLevels|raw }};
        const soilTypeCounts = {{ soilTypeCounts|raw }};

        // Extraire les clÃ©s et valeurs pour le camembert
        const soilTypeLabels = Object.keys(soilTypeCounts);
        const soilTypeValues = Object.values(soilTypeCounts);

        // Chart Configuration
        const chartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true,
                    position: 'top'
                },
                tooltip: {
                    backgroundColor: 'rgba(0,0,0,0.8)',
                    titleFont: { weight: 'bold' },
                    bodyFont: { size: 14 }
                }
            },
            scales: {
                x: {
                    grid: { display: false }
                },
                y: {
                    beginAtZero: true
                }
            }
        };

        // ðŸŽ¨ Graphique en barres - Niveau de pH
        new Chart(document.getElementById('phChart'), {
            type: 'bar',
            data: {
                labels: phLevels.map((_, i) => `Soil ${i + 1}`),
                datasets: [{
                    label: 'pH Level',
                    data: phLevels,
                    backgroundColor: 'rgba(54, 162, 235, 0.7)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    hoverBackgroundColor: 'rgba(54, 162, 235, 1)'
                }]
            },
            options: chartOptions
        });

        // ðŸ“ˆ Graphique en lignes - HumiditÃ©
        new Chart(document.getElementById('humidityChart'), {
            type: 'line',
            data: {
                labels: humidityLevels.map((_, i) => `Soil ${i + 1}`),
                datasets: [{
                    label: 'Humidity',
                    data: humidityLevels,
                    backgroundColor: 'rgba(255, 99, 132, 0.4)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 2,
                    tension: 0.4, // Smooth curve
                    pointBackgroundColor: 'rgba(255, 99, 132, 1)',
                    pointBorderColor: '#fff',
                    pointRadius: 5
                }]
            },
            options: chartOptions
        });

        // ðŸŒ¿ Graphique en barres - Niveau de Nutriments
        new Chart(document.getElementById('nutrientChart'), {
            type: 'bar',
            data: {
                labels: nutrientLevels.map((_, i) => `Soil ${i + 1}`),
                datasets: [{
                    label: 'Nutrient Level',
                    data: nutrientLevels,
                    backgroundColor: 'rgba(255, 205, 86, 0.7)',
                    borderColor: 'rgba(255, 205, 86, 1)',
                    borderWidth: 1,
                    hoverBackgroundColor: 'rgba(255, 205, 86, 1)'
                }]
            },
            options: chartOptions
        });

        // ðŸ¥§ Graphique en camembert - RÃ©partition des types de sol
        new Chart(document.getElementById('soilTypeChart'), {
            type: 'pie',
            data: {
                labels: soilTypeLabels,
                datasets: [{
                    label: 'Soil Type Distribution',
                    data: soilTypeValues,
                    backgroundColor: ['#ff6384', '#36a2eb', '#ffcd56', '#4bc0c0', '#9966ff', '#ff9f40'],
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

    });
</script>
{% endblock %}