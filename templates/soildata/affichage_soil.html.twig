{% extends 'base_front.html.twig' %}

{% block n_page %}List Soil Data{% endblock %}

{% block body %}
<div class="container-fluid bg-light bg-icon py-6">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h1 class="display-5 mb-3">Soil Data List</h1>
        </div>

        <div class="row g-4 d-flex align-items-stretch">
            <!-- Loop through soil data -->
            {% for f in soil %}
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="bg-white text-center h-100 p-4 p-xl-5 shadow-sm rounded">
                        <img class="img-fluid mb-4" src="{{ asset('front/img/icon-1.png') }}" alt="">
                        <p class="mb-2"><strong>Niveau pH: </strong>{{ f.niveauPh }}</p>
                        <p class="mb-2"><strong>Niveau Nutriment: </strong>{{ f.niveauNutriment }}</p>
                        <p class="mb-2"><strong>Humidit√©: </strong>{{ f.humidite }}</p>
                        <p class="mb-4"><strong>Type de Sol: </strong>{{ f.typeSol }}</p>

                        <a class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill" href="{{ path('app_updateformsoil', {'id': f.id}) }}">Modify</a>
                        <a class="btn btn-outline-danger border-2 py-2 px-4 rounded-pill" href="{{ path('delete_soil', {'id': f.id}) }}">Delete</a>
                    </div>
                </div>
            {% endfor %}

            <!-- Add Soil Button (Beside the cards) -->
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="bg-primary text-center h-100 p-4 p-xl-5 d-flex align-items-center justify-content-center rounded shadow-sm">
                    <a href="{{ path('app_soil_add', {'cropId': crop.id}) }}" class="text-white text-decoration-none">
                        <h1 class="text-white mb-0">+</h1>
                        <p class="text-white">Add Soil</p>
                    </a>
                </div>
            </div>
        </div>

        <!-- Statistics Button -->
        <div class="text-center mt-5">
            <a href="{{ path('app_soil_statistics') }}" class="btn btn-info border-2 py-2 px-4 rounded-pill">
                <i class="fas fa-chart-bar me-2"></i> Statistics
            </a>
        </div>

        <!-- Ideal Conditions Button -->
        <div class="text-center mt-3">
            <a href="{{ path('app_crop_ideal_conditions') }}" class="btn btn-success border-2 py-2 px-4 rounded-pill">
                <i class="fas fa-seedling me-2"></i> Generate Ideal Conditions
            </a>
        </div>
    </div>
</div>
{% endblock %}