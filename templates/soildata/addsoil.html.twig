{% extends 'front/base-front.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-12 wow fadeInUp" data-wow-delay="0.5s">
                <div class="card shadow-sm p-4"> <!-- Card for framing -->
                    <h2 class="form-title text-center mb-4">add soil</h2>
                    
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                    
                    {{ form_start(form, { 'attr': {'class': 'row g-3'}}) }}
                    
                    <div class="col-md-6">
                        <div class="form-floating">
                            {{ form_widget(form.niveau_ph, {'attr': {'class': 'form-control', 'placeholder': 'NiveauPh'}}) }}
                            {{ form_label(form.niveau_ph, 'niveau_ph', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_errors(form.niveau_ph) }}
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-floating">
                            {{ form_widget(form.humidite, {'attr': {'class': 'form-control', 'placeholder': 'Type de culture'}}) }}
                            {{ form_label(form.humidite, 'Type de culture', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_errors(form.humidite) }}
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-floating">
                            {{ form_widget(form.niveau_nutriment, {'attr': {'class': 'form-control', 'placeholder': 'Méthode de culture'}}) }}
                            {{ form_label(form.niveau_nutriment, 'Méthode de culture', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_errors(form.niveau_nutriment) }}
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-floating">
                            {{ form_widget(form.type_sol, {'attr': {'class': 'form-control', 'placeholder': 'Date de plantation'}}) }}
                            {{ form_label(form.type_sol, 'Date de plantation', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_errors(form.type_sol) }}
                        </div>
                    </div>
                    <div class="col-12 text-center mt-4">
                        <button type="submit" class="btn btn-primary rounded-pill py-3 px-5">Confirme</button>
                    </div>
                    {{ form_end(form) }}
                  
                </div> <!-- End of card -->
                <script>
                    document.querySelector('button[type="submit"]').addEventListener('click', function(event) {
                        event.preventDefault(); // Prevent the default form submission
                        document.querySelector('form').submit(); // Submit the form manually
                    });
                </script>
                
            </div>
        </div>
    </div>
{% endblock %}
