{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-6">
        <h1 class="text-center mb-5">{{ article.title }}</h1>

        <div class="row">
            {% if comments is not empty %}
                {% for commentaire in comments %}
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Commentaire :</h5>
                                <p class="card-text">{{ commentaire.commentaire }}</p>
                                
                                {# Affichage des étoiles en fonction de la note #}
                                <h5 class="card-title">
                                    Rating:
                                    {% for i in 1..5 %}
                                        {% if i <= commentaire.rate %}
                                            {% if commentaire.rate >= 3 %}
                                                <span class="text-warning">★</span> {# Étoile dorée #}
                                            {% else %}
                                                <span class="text-danger">★</span> {# Étoile rouge #}
                                            {% endif %}
                                        {% else %}
                                            <span class="text-secondary">★</span> {# Étoile grise pour les notes non attribuées #}
                                        {% endif %}
                                    {% endfor %}
                                </h5>

                                {# Bouton Supprimer avec icône #}
                                <div class="mt-3">
                                    <form action="{{ path('app_commentaire_delete', {'id': commentaire.id}) }}" method="post" class="d-inline">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?')">
                                            <i class="fas fa-trash-alt"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>Aucun commentaire trouvé pour cet article.</p>
            {% endif %}
        </div>

        {# Bouton pour ajouter un nouveau commentaire avec icône #}
        <div class="mt-4 text-center">
            <a href="{{ path('app_commentaire_new', {'articleId': article.id}) }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter un commentaire
            </a>
        </div>

        {# Bouton pour retourner à la page de l'article avec icône #}
        <div class="mt-4 text-center">
            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à l'article
            </a>
        </div>
    </div>
{% endblock %}