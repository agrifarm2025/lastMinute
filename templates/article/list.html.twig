{% extends 'base_front.html.twig' %}

{% block body %}
    <div class="container py-6">
        <h1 class="text-center mb-5">Articles</h1>

        <div class="row">
            {% for article in articles %}
                <div class="col-md-4 mb-4">
                    <div class="card product-item h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="shrink-0 mb-3">
                                {% if article.image is not null %}
                                    <img class="card-img-top" src="{{ asset(article.image) }}" alt="{{ article.title }}" />
                                {% else %}
                                    <p>No image available</p>
                                {% endif %}
                            </div>
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.featuredText|slice(0, 100) }}...</p>
                            <div class="mt-auto">
                                <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form action="{{ path('article_delete', {'id': article.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this article?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">No articles found.</p>
                </div>
            {% endfor %}
        </div>

        <div class="text-center mt-5">
            <a href="{{ path('article_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Create New Article
            </a>
        </div>
    </div>
{% endblock %}
