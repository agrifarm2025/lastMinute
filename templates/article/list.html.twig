{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container py-6">
        <h1 class="text-center mb-5">Articles</h1>

        <div class="row">
            {% for article in articles %}
                <div class="col-md-4 mb-4">
                    <div class="card product-item">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.featuredText|slice(0, 100) }}...</p>
                            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">View</a>
                            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-warning">Edit</a>
                            <form action="{{ path('article_delete', {'id': article.id}) }}" method="post" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this article?')">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">No articles found.</p>
                </div>
            {% endfor %}
        </div>

        <div class="text-center mt-5">
            <a href="{{ path('article_new') }}" class="btn btn-success">Create New Article</a>
        </div>
    </div>
{% endblock %}