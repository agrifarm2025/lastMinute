{% extends 'base.html.twig' %}

{% block header %}
{% endblock %}

{% block sidebar %}
{% endblock %}

{% block footer %}
{% endblock %}

{% block body %}
    <div class="pagetitle">
        <h1>User Details</h1>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">User Information</h5>
            <div class="row mb-3">
                <div class="col-lg-3 col-md-4 label">ID</div>
                <div class="col-lg-9 col-md-8">{{ user.id }}</div>
            </div>
            <div class="row mb-3">
                <div class="col-lg-3 col-md-4 label">Email</div>
                <div class="col-lg-9 col-md-8">{{ user.email }}</div>
            </div>
            <div class="row mb-3">
                <div class="col-lg-3 col-md-4 label">Roles</div>
                <div class="col-lg-9 col-md-8">{{ user.roles|join(', ') }}</div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
        <a href="{{ path('admin_user_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
{% endblock %}
