{% extends 'base.html.twig' %}

{% block header %}
{% endblock %}

{% block sidebar %}
{% endblock %}

{% block footer %}
{% endblock %}

{% block body %}
    <h1>Admin - Manage Users</h1>

    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
        {% for user in users %}
        <tr>
            <td>{{ user.FirstName }}</td>
            <td>{{ user.LastName }}</td>
            <td>
                <a href="{{ path('admin_user_show', {'id': user.id}) }}">View</a>
                <a href="{{ path('admin_user_edit', {'id': user.id}) }}">Edit</a>
                <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}
