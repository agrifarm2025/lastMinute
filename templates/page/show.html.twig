# templates/comment/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Comment Details{% endblock %}

{% block body %}
    <h1>Comment Details</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ comment.id }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ comment.content }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ comment.author }}</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Post</th>
            <td>{{ comment.post.title }}</td> {# Assuming Post has a 'title' field #}
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comment_index') }}">Back to List</a>
    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">Edit</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}