{% extends 'base.html.twig' %}

{% block header %}
{% endblock %}

{% block sidebar %}
{% endblock %}

{% block footer %}
{% endblock %}

{% block body %}
<div class="card p-4">
    <h2 class="text-center mb-3">Update Profile Picture</h2>

    <div class="text-center">
        <img src="{{ asset('uploads/images/' ~ user.imageFileName) }}" alt="Profile" class="rounded-circle border shadow-sm" width="150">
    </div>

    <div class="mt-3">
        {{ form_start(form, {'attr': {'class': 'd-flex flex-column align-items-center'}}) }}
            <div class="mb-3 w-100">
                {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
            </div>
        {{ form_end(form) }}
    </div>

    <form action="{{ path('app_delete_profile_photo') }}" method="post" class="mt-3 text-center" 
          onsubmit="return confirm('Are you sure you want to delete your profile picture?');">
        <button type="submit" class="btn btn-danger">Delete Profile Picture</button>
    </form>
</div>

{% endblock %}