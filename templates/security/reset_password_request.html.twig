{% extends 'base.html.twig' %}

{% block header %}
{% endblock %}

{% block sidebar %}
{% endblock %}

{% block footer %}
{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="container d-flex justify-content-center align-items-center vh-100">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-4">
                        <div class="text-center">
                            <h2 class="mb-3"><i class="bi bi-lock"></i> Forgot Password?</h2>
                            <p class="text-muted">Enter your email and we'll send you a link to reset your password.</p>
                        </div>
                        {% include 'flash.html.twig' %}

                        {{ form_start(requestPassForm, {attr:{novalidate:'novalidate'}}) }}
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="bi bi-envelope"></i> Email Address</label>
                            {{ form_widget(requestPassForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                            {{ form_errors(requestPassForm.email,{'attr':{'class':'text-danger'}}) }}
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-send"></i> Send Reset Link
                        </button>

                        {{ form_end(requestPassForm) }}

                        <div class="text-center mt-3">
                            <a href="{{ path('app_login') }}" class="text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main><!-- End #main -->

{% endblock %}